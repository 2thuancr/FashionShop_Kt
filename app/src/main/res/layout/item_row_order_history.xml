<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_package_product"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/title_product_detail" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textColor="@color/color_primary"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: 1"
            android:textColor="@color/color_primary"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="71.000 đ"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:strokeColor="@color/color_primary"
                android:text="Chi Tiết"
                android:textSize="13dp"
                app:cornerRadius="8dp"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuyAgain"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:textSize="13dp"
                android:text="Mua Lại"
                android:strokeColor="@color/color_primary"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
