<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/bottom_navigation_height"
    tools:context=".ui.MainActivity">

    <!-- ScrollView content -->
    <ScrollView
        android:id="@+id/profileScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header Background -->
            <ImageView
                android:id="@+id/HeaderBackground"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/top_background1" />

            <!-- Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="-60dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <!-- Profile Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profileImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_profile"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent" />

                    <!-- User Name -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Vi Quốc Thuận"
                        android:textSize="20sp"
                        android:textColor="@color/color_primary"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                    <!-- User Email -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="2thuancr03@gmail.com"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_secondary"
                        android:textAlignment="center" />

                    <!-- Menu Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical">
                        <!-- Personal Details -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Details"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="24dp" />

                        <!-- Email -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email Address"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/emailAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="aashifa@gmail.com"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- Password -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="***********"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- Change Password -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/changePasswordButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Password"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            app:cornerRadius="8dp" />

                        <!-- Business Address -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Business Address Details"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="24dp" />

                        <!-- Pincode -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pincode"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/pincode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="450116"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- Address -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="216 St Paul's Rd"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- City -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="London"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- State -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N1 2LL"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- Country -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="United Kingdom"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- Bank Account Details -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Account Details"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="24dp" />
                        <!-- Bank Account Number -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Account Number"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/bankAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="204356XXXXXXX"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- Account Holder’s Name -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Holder’s Name"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/accountHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Abhiraj Sisodiya"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />

                        <!-- IFSC Code -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IFSC Code"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/ifscCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SBIN00428"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary" />
                        <!-- Save Button -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="LƯU THAY ĐỔI"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
