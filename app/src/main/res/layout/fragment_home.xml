<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/bottom_navigation_height"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding">
        <!-- ðŸ‘¤ Avatar trÃ¡i - Menu pháº£i -->
        <!-- ðŸ‘¤ Avatar trÃ¡i + Text chÃ o -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="7dp"
            android:paddingTop="4dp"
            android:paddingBottom="5dp">

            <!-- Pháº§n Avatar + Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Avatar hÃ¬nh trÃ²n -->
                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/avatar_meo"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"
                    android:contentDescription="Avatar" />

                <!-- Khá»‘i chá»©a Xin chÃ o + tÃªn ngÆ°á»i dÃ¹ng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/txtGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chÃ o"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2ThuanCr"
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <!-- Khoáº£ng cÃ¡ch giÃ£n -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Menu icon bÃªn pháº£i -->
            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home1"
                android:contentDescription="Menu" />
        </LinearLayout>

        <!-- ðŸ” Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_top"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:startIconDrawable="@drawable/ic_search1"
                app:boxBackgroundMode="none"
                app:startIconTint="@null"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="TÃ¬m kiáº¿m sáº£n pháº©m"
                    android:paddingVertical="8dp"
                    android:paddingStart="4dp"
                    android:textColorHighlight="@color/color_primary"
                    android:textColorHint="@color/color_primary"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Banner -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImages"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="@dimen/default_margin_top"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
            android:id="@+id/viewPagerImagesIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_margin_top"
            app:layout_constraintTop_toBottomOf="@id/viewPagerImages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Danh má»¥c -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding"
            android:background="@drawable/bg_section_header"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/default_margin_top">

            <TextView
                android:id="@+id/tvCategoriesTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Danh má»¥c"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/tvViewAllCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem táº¥t cáº£"
                android:textSize="14sp"
                android:textColor="@color/color_secondary"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- RecyclerView danh má»¥c -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_top" />

        <!-- Sáº£n pháº©m ná»•i báº­t -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding"
            android:background="@drawable/bg_section_header"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/default_margin_top">

            <TextView
                android:id="@+id/tvFeaturedProductsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sáº£n pháº©m ná»•i báº­t"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/tvViewAllProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem táº¥t cáº£"
                android:textSize="14sp"
                android:textColor="@color/color_secondary"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featuredProductsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_top" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
