<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal">

    <!-- Ảnh sản phẩm -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_package_product"
        android:layout_marginEnd="12dp" />

    <!-- Nội dung bên phải ảnh -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Áo Sơ Mi Dài Tay Đũi Oxford 1 Túi ZUTE..."
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />

        <!-- Mô tả + số lượng trên cùng một dòng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <!-- Mô tả sản phẩm -->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đũi Trắng, M (50-65kg)"
                android:textColor="#888888"
                android:textSize="12sp" />

            <!-- Số lượng -->
            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Giá cũ + mới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="end|center_vertical">

            <!-- Giá cũ -->
            <TextView
                android:id="@+id/oldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫180.000"
                android:textSize="12sp"
                android:textColor="#999999"
                android:paintFlags="strikeThruText" />

            <!-- Giá mới -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫150.000"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
