<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cart.OrderHistoryFragment">

    <!-- Nội dung chính với AppBar + Scroll -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- AppBar cố định với Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/background_color_light"
                android:textAlignment="textStart"
                app:navigationIcon="@drawable/ic_reply"
                app:title="ĐƠN HÀNG CỦA TÔI"
                app:titleTextColor="@color/color_primary" />
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Scroll nội dung đơn hàng -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tìm kiếm -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/searchLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tìm kiếm đơn hàng"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tabs scrollable -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="scrollable">

                    <com.google.android.material.tabs.TabItem android:text="Tất cả đơn"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <com.google.android.material.tabs.TabItem android:text="Chờ thanh toán"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <com.google.android.material.tabs.TabItem android:text="Đang xử lý"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <com.google.android.material.tabs.TabItem android:text="Đang giao hàng"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <com.google.android.material.tabs.TabItem android:text="Đã huỷ"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <com.google.android.material.tabs.TabItem android:text="Đã giao hàng"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                </com.google.android.material.tabs.TabLayout>

                <!-- Danh sách sản phẩm -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewOrders"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>
