    <fragment
        android:id="@+id/navigation_checkout"
        android:name="com.student22110006.fashionshop.ui.cart.CheckoutFragment"
        android:label="@string/title_checkout"
        tools:layout="@layout/fragment_checkout" />

    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.student22110006.fashionshop.ui.profile.EditProfileFragment"
